@model IEnumerable<MVC_First_Week_HW.Models.客戶資料>

@{
    ViewBag.Title = "客戶資料";
}

<h2>客戶資料</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
@using (Html.BeginForm("Index", "客戶資料", FormMethod.Post, null))
{
    <label>搜尋：</label>
    @Html.TextBox("keyword", (string)ViewBag.keyword, new { placeholder = "請輸入客戶名稱" });
    <input type="submit" value="搜尋" />
    <br />
    <label>篩選-客戶分類：</label>
    @Html.DropDownList("客戶分類", null, "請選擇", (string)ViewBag.篩選分類)
    <input type="submit" value="篩選" />
}
@using (Html.BeginForm("ExportExcel", "客戶資料", FormMethod.Post, null))
{
    @Html.Hidden("keyword", (string)ViewBag.keyword)
    @Html.Hidden("篩選分類", (string)ViewBag.篩選分類)
    @Html.Hidden("sort_col", (string)ViewBag.sort_col)
    @Html.Hidden("current_sort", (string)ViewBag.current_sort)
    <input type="submit" value="Export" />
}
<table class="table">
    <tr>
        <th>
            @Html.ActionLink("客戶名稱", "Index", new { sort_col = "客戶名稱", current_sort = ViewBag.current_sort, keyword = (string)ViewBag.keyword, 客戶分類 = (string)ViewBag.篩選分類 })
        </th>
        <th>
            @Html.ActionLink("統一編號", "Index", new { sort_col = "統一編號", current_sort = ViewBag.current_sort, keyword = (string)ViewBag.keyword, 客戶分類 = (string)ViewBag.篩選分類 })
        </th>
        <th>
            @Html.ActionLink("電話", "Index", new { sort_col = "電話", current_sort = ViewBag.current_sort, keyword = (string)ViewBag.keyword, 客戶分類 = (string)ViewBag.篩選分類 })
        </th>
        <th>
            @Html.ActionLink("傳真", "Index", new { sort_col = "傳真", current_sort = ViewBag.current_sort, keyword = (string)ViewBag.keyword, 客戶分類 = (string)ViewBag.篩選分類 })
        </th>
        <th>
            @Html.ActionLink("地址", "Index", new { sort_col = "地址", current_sort = ViewBag.current_sort, keyword = (string)ViewBag.keyword, 客戶分類 = (string)ViewBag.篩選分類 })
        </th>
        <th>
            @Html.ActionLink("Email", "Index", new { sort_col = "Email", current_sort = ViewBag.current_sort, keyword = (string)ViewBag.keyword, 客戶分類 = (string)ViewBag.篩選分類 })
        </th>
        <th>
            @Html.ActionLink("客戶分類", "Index", new { sort_col = "客戶分類", current_sort = ViewBag.current_sort, keyword = (string)ViewBag.keyword, 客戶分類 = (string)ViewBag.篩選分類 })
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.客戶名稱)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.統一編號)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.電話)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.傳真)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.地址)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.客戶分類)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
