            </div>

        </nav>
        <!-- /. NAV SIDE  -->
        <div id="page-wrapper">
            <ul class="breadcrumb">
                <li>
                    <i class="icon-home"></i>
                    <a href="@Url.Action("Index","Home")">Home</a>
                    <i class="icon-angle-right"></i>
                </li>
                <li>@RenderSection("breadCrumb", false)</li>
            </ul>
            @RenderBody()
