<body>
    <div id="wrapper">
        <nav class="navbar navbar-default navbar-cls-top " role="navigation" style="margin-bottom: 0">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".sidebar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="~/">Client Web</a>
            </div>
            <div style="color: white;
                padding: 15px 50px 5px 50px;
                float: right;
                font-size: 16px;">
                <span style="margin-right:10px;">@HttpContext.Current.User.Identity.Name</span>
                @*Last access : 30 May 2014 &nbsp;*@
                @*<a href="~/Login" class="btn btn-primary" style="margin-right:10px;">Login</a>
        <a href="~/Login/Logout" class="btn btn-danger">Logout</a>*@
